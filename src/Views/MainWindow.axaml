<Window xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:EducationBoy.ViewModels"
    x:Class="EducationBoy.Views.MainWindow"
    Width="800" Height="600"
    Title="EducationBoy"
    x:DataType="vm:MainWindowViewModel">

    <Grid Background="Black" RowDefinitions="Auto,*">
        <StackPanel Orientation="Horizontal" Spacing="12" Margin="12" VerticalAlignment="Center">
            <Button
                Focusable="False"
                Content="Load ROM"
                Command="{Binding LoadRomCommand}"
                Padding="14,8"
                HorizontalAlignment="Left" />
            <TextBlock
                Text="{Binding LoadedRomName}"
                VerticalAlignment="Center"
                Foreground="White"
                FontSize="14" />
            <TextBlock Text="Volume" VerticalAlignment="Center" Foreground="White" Margin="24,0,0,0"/>
            <Slider Width="150"
                    Focusable="False"
                    Minimum="0" Maximum="0.25"
                    SmallChange="0.01" LargeChange="0.05"
                    Value="{Binding Volume, Mode=TwoWay}" />
        </StackPanel>

        <Border Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="12">
            <Image
                x:Name="FrameImage"
                Width="320" Height="288"
                Stretch="Uniform"
                RenderOptions.BitmapInterpolationMode="None"
                Source="{Binding FramebufferBitmap}" />
        </Border>
    </Grid>
</Window>
